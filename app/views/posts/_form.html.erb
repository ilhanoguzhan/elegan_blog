<%= simple_form_for(@post, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.association :category, :input_html => { :class => "form-control" } %>
    <%= f.input :author %>
    <%= f.input :title %>
    <%= f.input :content, :input_html => { :rows => 16 } %>
    <h3>Pictures</h3>
    <div id="pictures">
      <%= f.simple_fields_for :pictures do |task| %>
          <%= render 'picture_fields', :f => task, :post => @post %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add picture', f, :pictures, :class => "btn btn-success btn-xs"  %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit, :class => "btn btn-primary"  %>
  </div>
<% end %>
