<div class="panel panel-default">
  <div class="panel-body">
    <h4>Add a comment:</h4>
  </div>
  <div class="panel-footer">
    <%= form_for([@post, @post.comments.build]) do |f| %>
        <p>
          <%= f.label :commenter %><br />
          <%= f.text_field :commenter %>
        </p>
        <p>
          <%= f.label :body %><br />
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit nil, :class => "btn btn-primary" %>
        </p>
    <% end %>
  </div>
</div>